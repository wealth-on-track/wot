generator client {
  provider = "prisma-client-js"
  // Schema version: 1.1 -- Force Vercel Refresh
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String     @id @default(cuid())
  username  String     @unique
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  portfolio Portfolio?
}

model Portfolio {
  id        String   @id @default(cuid())
  userId    String   @unique
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  assets    Asset[]
  user      User     @relation(fields: [userId], references: [id])
}

model Asset {
  id          String    @id @default(cuid())
  portfolioId String
  type        String
  symbol      String
  name        String?
  quantity    Float
  buyPrice    Float
  currency    String
  exchange    String?
  sector      String?
  country     String?
  platform    String?
  isin        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  customGroup   String?
  rank          Int?      @default(0)
  location      String?   // NL, TR
  ownerCode     String?   // EAK, TAK, AAK
  assetClass    String?   // Cash, Equity, Crypto...
  assetSubClass String?   // Equity, Bond...
  market        String?   // NASDAQ, BIST... 
  nextEarningsDate DateTime? // Manually or automatically set next earnings date
  portfolio     Portfolio @relation(fields: [portfolioId], references: [id])
}


model PriceCache {
  symbol      String   @id
  price       Float
  currency    String
  marketState String?
  updatedAt   DateTime @updatedAt
}

model ExchangeRate {
  currency  String   @id
  rate      Float
  updatedAt DateTime @updatedAt
}
